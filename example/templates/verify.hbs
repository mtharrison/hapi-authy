<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h2>Enter Two-Factor Authentication Token</h2>
    <form action="{{path}}" method="POST">
      <div class="form-group">
        <label for="token">Enter your 2FA token</label>
        <input type="number" class="form-control" name="token" id="token" placeholder="" value="token">
      </div>
      <div class="form-group">
        <a href="{{smsPath}}">Request SMS</a>
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
    </form>
  </div>
</div>